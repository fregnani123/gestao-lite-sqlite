{
  "name": "electronmysql",
  "version": "2.0.0",
  "main": "./src/main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-packager .",
    "dist": "electron-builder",
    "rebuild": "electron-rebuild -f -w better-sqlite3"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "electron": "^31.2.1",
    "electron-builder": "^24.7.0",
    "electron-packager": "^15.5.0",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "better-sqlite3": "^11.8.1",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.5",
    "escpos": "^3.0.0-alpha.6",
    "express": "^4.19.2",
    "jspdf": "^3.0.0",
    "mongoose": "^8.9.1",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.12.0",
    "node-thermal-printer": "^4.4.4",
    "print-js": "^1.6.0",
    "qrcode": "^1.5.4"
  },
  "build": {
    "appId": "com.gestaolite",
    "productName": "Gest√£o Lite",
    "asar": false,
    "directories": {
      "output": "dist"
    },
    "files": [
      "config/**/*",
      "db/**/*",
      "img/**/*",
      "node_modules/**/*",
      "public/**/*",
      "Renderer/**/*",
      "Server/**/*",
      "services/**/*",
      "src/**/*",
      "style/**/*",
      "package.json"
    ],
    "win": {
      "icon": "./img/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "icon": "./img/icon.ic"
    },
    "linux": {
      "icon": "./img/icon.ic"
    }
  }
}
